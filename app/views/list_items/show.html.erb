<div><h2><%= @list_item.name%></h2></div>
 Assign tag:
<div class="btn-group" role="group">
<% @tags.each do |tag| %>
  <%= link_to tag.name, tag_items_path(id: @list_item.id, tag_id: tag.id), method: :post %>
<% end %>
</div>
<br>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>List Item Name</th>
      <th style="width: 100px;text-align: center;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @list_item.tag_items.not_destroyed.each_with_index do |tag_item, i | %>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= tag_item.tag.name %></td>
        <td align="right">
          <div class="btn-group" role="group">
            <%= link_to "Soft Delete", delete_tag_item_path(tag_item), method: :delete, data: { confirm: "Sure you want to delete this tag?" }, class: "btn btn-warning" %>          
            <%= link_to "Hard Delete", tag_item_path(tag_item), method: :delete, data: { confirm: "Sure you want to permnatly delete this tag?" }, class: "btn btn-danger" %>
          </div>                 
        </td>			        
      </tr>
    <% end %> 
  </tbody>
</table>			