<h2><%= @list.name%></h2>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>List Name</th>
      <th style="width: 100px;text-align: center;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @list.list_items.not_destroyed.each_with_index do |item, i | %>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= link_to item.name, list_item_path(item) %></td>
        <td align="right">
          <div class="btn-group" role="group">
            <%= link_to "Soft Delete", list_path(@list), method: :delete, data: { confirm: "Sure you want to delete this list?" }, class: "btn btn-warning" %>          
            <%= link_to "Hard Delete", list_path(@list), method: :delete, data: { confirm: "Sure you want to permnatly delte this list?" }, class: "btn btn-danger" %>
          </div>        
        </td>			        
      </tr>
    <% end %> 
  </tbody>
</table>